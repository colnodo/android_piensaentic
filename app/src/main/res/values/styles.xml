<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--<item name="windowActionBar">false</item>-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">@color/orange_inactive_pager</item>
        <item name="colorAccent">@color/orange_inactive_pager</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="windowNoTitle">true</item>-->
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="background">@color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActivityTextItemSelected" parent="android:Widget.TextView">
        <item name="android:textColor">@color/blue_active_pager</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily"
            tools:ignore="NewApi">roboto_condensed_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ActivityTextItemNotSelected" parent="ActivityTextItemSelected">
        <item name="android:textColor">@color/blue_inactive_pager</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
